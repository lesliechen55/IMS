@model MainResponse
@{
    ViewData["Title"] = "管理中心";
}
<blockquote class="layui-elem-quote layui-bg-green">
    <div id="nowTime"></div>
</blockquote>
<div class="layui-row layui-col-space10 panel_box">
    <div class="panel layui-col-xs12 layui-col-sm6 layui-col-md4 layui-col-lg2">
        <a href="javascript:;">
            <div class="panel_icon layui-bg-orange">
                <i class="layui-anim seraph icon-wechat" data-icon="icon-icon10"></i>
            </div>
            <div class="panel_word">
                <span>@Model.TotalManager</span>
                <em>用户总数</em>
                <cite class="layui-hide">用户中心</cite>
            </div>
        </a>
    </div>
    <div class="panel layui-col-xs12 layui-col-sm6 layui-col-md4 layui-col-lg2">
        <a href="javascript:;">
            <div class="panel_icon layui-bg-green">
                <i class="layui-anim seraph icon-icon10" data-icon="icon-icon10"></i>
            </div>
            <div class="panel_word">
                <span>@Model.TotalRole</span>
                <em>角色总数</em>
                <cite class="layui-hide">角色中心</cite>
            </div>
        </a>
    </div>
    <div class="panel layui-col-xs12 layui-col-sm6 layui-col-md4 layui-col-lg2">
        <a href="javascript:;">
            <div class="panel_icon layui-bg-red">
                <i class="layui-anim seraph icon-look" data-icon="icon-icon10"></i>
            </div>
            <div class="panel_word">
                <span>@Model.TotalPermission</span>
                <em>权限总数</em>
                <cite class="layui-hide">权限中心</cite>
            </div>
        </a>
    </div>
    <div class="panel layui-col-xs12 layui-col-sm6 layui-col-md4 layui-col-lg2">
        <a href="javascript:;">
            <div class="panel_icon layui-bg-blue">
                <i class="layui-anim seraph icon-clock"></i>
            </div>
            <div class="panel_word">
                <span class="loginTime">
                    @Model.LastLoginTime.ToLongDateString()
                    <br>
                    @Model.LastLoginTime.ToLongTimeString()
                </span>
                <cite>上次登录时间</cite>
            </div>
        </a>
    </div>
</div>
@section Scripts{
    <environment include="Development">
        <script type="text/javascript" src="~/js/main.js" asp-append-version="true"></script>
    </environment>
    <environment exclude="Development">
        <script type="text/javascript" src="~/js/main.min.js" asp-append-version="true"></script>
    </environment>
}