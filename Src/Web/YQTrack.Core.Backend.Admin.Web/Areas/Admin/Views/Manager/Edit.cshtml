@model IframeTransferData<ManagerPageDataResponse>
@{
    Layout = "_Layout";
}
<div class="layui-form">
    <input type="hidden" name="id" value="@Model.Data.Id" />
    <div class="layui-form-item">
        <label class="layui-form-label">昵称</label>
        <div class="layui-input-block">
            <input type="text" name="nickName" required lay-verify="required" placeholder="请输入昵称" autocomplete="off" class="layui-input" value="@Model.Data.NickName">
        </div>
    </div>
    <div class="layui-form-item">
        <label class="layui-form-label">密码</label>
        <div class="layui-input-block">
            <input type="password" name="password" placeholder="请输入密码(填写则会重置密码,慎重!)" required autocomplete="off" class="layui-input" lay-verify="password">
        </div>
    </div>
    <div class="layui-form-item">
        <label class="layui-form-label">确认密码</label>
        <div class="layui-input-block">
            <input type="password" name="confirmPassword" placeholder="请输入确认密码(填写则会重置密码,慎重!)" required autocomplete="off" class="layui-input" lay-verify="confirmPassword">
        </div>
    </div>
    <div class="layui-form-item">
        <label class="layui-form-label">是否启用</label>
        <div class="layui-input-block">
            <input type="checkbox" name="isLock" lay-filter="locked" lay-skin="switch" lay-text="ON|OFF" value="@(Model.Data.IsLock ? "true" : "false")" @(Model.Data.IsLock ? "" : "checked")>
        </div>
    </div>
    <div class="layui-form-item layui-form-text">
        <label class="layui-form-label">备注</label>
        <div class="layui-input-block">
            <textarea name="remark" required lay-verify="required" placeholder="请输入备注内容" class="layui-textarea">@Model.Data.Remark</textarea>
        </div>
    </div>
    <div class="layui-form-item">
        <div class="layui-input-block">
            <button class="layui-btn" lay-submit lay-filter="form">立即提交</button>
            <button class="layui-btn layui-btn-danger" id="close">关闭</button>
        </div>
    </div>
</div>
@section Scripts{
    <environment include="Development">
        <script src="~/js/admin/manager/edit.js" asp-append-version="true"></script>
    </environment>
    <environment exclude="Development">
        <script src="~/js/admin/manager/edit.min.js" asp-append-version="true"></script>
    </environment>
}
