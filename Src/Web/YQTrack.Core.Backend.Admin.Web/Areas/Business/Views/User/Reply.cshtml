@model long
@{
    Layout = "_Layout";
}
@section head{
    <style type="text/css">
        .layui-form-label {
            width: 65px;
        }

        .layui-input-block {
            margin-left: 95px;
            min-height: 36px;
            padding-right: 10px;
        }

        .layui-form-item {
            margin-bottom: 10px
        }
    </style>
}

<div class="layui-form">
    <input name="feedBackIds" type="hidden" value="@ViewBag.Ids" />
    <div class="layui-form-item">
        <label class="layui-form-label">快捷回复</label>
        <div class="layui-input-block">
            <input type="radio" name="shortcut" value="不需要回复" title="不需要回复" lay-filter="shortcut">
            <input type="radio" name="shortcut" value="已QQ回复" title="已QQ回复" lay-filter="shortcut">
            <input type="radio" name="shortcut" value="已邮件回复" title="已邮件回复" lay-filter="shortcut">
        </div>
    </div>
    <div class="layui-form-item">
        <label class="layui-form-label">回复内容</label>
        <div class="layui-input-block">
            <textarea name="content" id="content" placeholder="请输入回复内容" class="layui-textarea" lay-verify="required"></textarea>
        </div>
    </div>
    <div class="layui-form-item">
        <div class="layui-input-block">
            <button id="submit" class="layui-btn" lay-submit lay-filter="form">立即提交</button>
            <button class="layui-btn layui-btn-danger" id="close">关闭</button>
        </div>
    </div>
</div>
@section Scripts{
    <environment include="Development">
        <script src="~/js/business/user/reply.js" asp-append-version="true"></script>
    </environment>
    <environment exclude="Development">
        <script src="~/js/business/user/reply.min.js" asp-append-version="true"></script>
    </environment>
}

