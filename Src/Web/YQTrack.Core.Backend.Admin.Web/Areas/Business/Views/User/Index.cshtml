@{
    ViewBag.Title = "用户管理";
    Layout = "_Layout";
}
<blockquote class="layui-elem-quote quoteBox">
    <form class="layui-form">
        <div class="layui-inline">
            <input type="hidden" id="page" name="page" value="1" />
            <input type="hidden" id="limit" name="limit" value="10" />
            <div class="layui-input-inline">
                <input type="text" autocomplete="on" id="gid" name="gid" class="layui-input" placeholder="请输入用户标识GID" />
            </div>
            <div class="layui-input-inline">
                <input type="text" autocomplete="on" id="userId" name="userId" class="layui-input" placeholder="请输入用户ID" />
            </div>
            <div class="layui-input-inline">
                <input type="text" autocomplete="on" id="email" name="email" class="layui-input" placeholder="请输入用户邮箱" />
            </div>
            <a class="layui-btn" id="search">搜索</a>
        </div>
    </form>
</blockquote>
<table id="table" class="layui-table" lay-filter="table"></table>
<script type="text/html" id="toolbar">
</script>
<script type="text/html" id="operationBar">
    <a class="layui-btn layui-btn-xs" lay-event="detail">查看</a>
    {{#  if(d.userRole == "未指定" || d.userRole == "买家" || d.userRole == "卖家" || d.userRole == "运输商"){ }}
    <a class="layui-btn layui-btn-danger layui-btn-xs" lay-event="delete">注销</a>
    {{#  } }}
</script>
@section Scripts{
    <environment include="Development">
        <script src="~/js/business/user/index.js" asp-append-version="true"></script>
    </environment>
    <environment exclude="Development">
        <script src="~/js/business/user/index.min.js" asp-append-version="true"></script>
    </environment>
}