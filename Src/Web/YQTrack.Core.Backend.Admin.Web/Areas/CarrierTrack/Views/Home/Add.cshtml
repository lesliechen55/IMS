@model IframeTransferData
@{
    Layout = "_Layout";
}

@section head{
    <style type="text/css">
        .layui-form-label {
            width: 85px;
            padding-left: 10px;
        }
    </style>
}

<div class="layui-form">
    <div class="layui-form-item">
        <label class="layui-form-label">用户注册邮箱</label>
        <div class="layui-input-block">
            <input type="text" name="email" required lay-verify="required|email" placeholder="请输入用户注册邮箱" autocomplete="off" class="layui-input">
        </div>
    </div>
    <div class="layui-form-item">
        <label class="layui-form-label">当日导入限制</label>
        <div class="layui-input-block">
            <input type="number" name="importTodayLimit" value="15000" step="100" min="5000" required lay-verify="number" placeholder="请输入当日导入限制" autocomplete="off" class="layui-input">
        </div>
    </div>
    <div class="layui-form-item">
        <label class="layui-form-label">单次导出限制</label>
        <div class="layui-input-block">
            <input type="number" name="exportTimeLimit" value="10000" step="100" min="5000" required lay-verify="number" placeholder="请输入单次导出限制" autocomplete="off" class="layui-input">
        </div>
    </div>
    <div class="layui-form-item">
        <label class="layui-form-label">是否启用</label>
        <div class="layui-input-block">
            <input type="checkbox" name="enable" checked lay-filter="enable" lay-skin="switch" lay-text="ON|OFF" value="true">
        </div>
    </div>
    <div class="layui-form-item">
        <div class="layui-input-block">
            <button class="layui-btn" lay-submit lay-filter="form">立即提交</button>
            <button class="layui-btn layui-btn-danger" id="close">关闭</button>
        </div>
    </div>
</div>

@section Scripts{
    <environment include="Development">
        <script src="~/js/carrierTrack/home/add.js" type="text/javascript" asp-append-version="true"></script>
    </environment>
    <environment exclude="Development">
        <script src="~/js/carrierTrack/home/add.min.js" type="text/javascript" asp-append-version="true"></script>
    </environment>
}
