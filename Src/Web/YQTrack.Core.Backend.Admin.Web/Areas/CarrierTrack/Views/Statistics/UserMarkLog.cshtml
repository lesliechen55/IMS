@{
    Layout = "_Layout";
}

<blockquote class="layui-elem-quote">
    <form class="layui-form">
        <div class="layui-input-inline">
            <input type="text" id="email" name="email" class="layui-input" placeholder="请输入用户邮箱" />
        </div>
        <div class="layui-input-inline">
            <input type="text" class="layui-input" id="startTime" name="startTime" placeholder="开始时间">
        </div>
        <div class="layui-input-inline">
            <input type="text" class="layui-input" id="endTime" name="endTime" placeholder="结束时间">
        </div>
        <a class="layui-btn layui-btn-normal" id="export" href="@Url.Action("ExportUserMarkLog", "Statistics")">导出Excel</a>
    </form>
</blockquote>

<blockquote class="layui-elem-quote">
    <form class="layui-form">
        <div class="layui-inline">
            <input type="hidden" id="page" name="page" value="1" />
            <input type="hidden" id="limit" name="limit" value="10" />
            <div class="layui-input-inline">
                <input type="text" id="userEmail" name="userEmail" class="layui-input" placeholder="请输入用户邮箱" />
            </div>
            <a class="layui-btn" id="search">搜索</a>
        </div>
    </form>
</blockquote>

<table id="table" class="layui-table" lay-filter="table"></table>
<script type="text/html" id="toolbar">
</script>

@section Scripts{
    <script src="~/lib/jquery.min.js" asp-append-version="true"></script>
    <environment include="Development">
        <script src="~/js/carrierTrack/statistics/userMarkLog.js" asp-append-version="true"></script>
        <script src="~/lib/jquery.fileDownload.js" asp-append-version="true"></script>
    </environment>
    <environment exclude="Development">
        <script src="~/js/carrierTrack/statistics/userMarkLog.min.js" asp-append-version="true"></script>
        <script src="~/lib/jquery.fileDownload.min.js" asp-append-version="true"></script>
    </environment>
}
