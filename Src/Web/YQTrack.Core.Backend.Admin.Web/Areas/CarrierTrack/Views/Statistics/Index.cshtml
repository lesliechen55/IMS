@using YQTrack.Core.Backend.Admin.Core
@using YQTrack.Core.Backend.Enums.Pay
@{
    Layout = "_Layout";
}

<blockquote class="layui-elem-quote">
    <form class="layui-form">
        <div class="layui-input-inline">
            <input type="text" class="layui-input" id="startTime" placeholder="开始时间" name="startTime">
        </div>
        <div class="layui-input-inline">
            <input type="text" class="layui-input" id="endTime" placeholder="结束时间" name="endTime">
        </div>
        <a class="layui-btn layui-btn-normal" id="export" href="@Url.Action("Export","Statistics")">导出Excel</a>
    </form>
</blockquote>

<blockquote class="layui-elem-quote">
    <form class="layui-form">
        <div class="layui-input-inline">
            <select id="chartDateType" name="chartDateType">
                @foreach (var (key, value) in EnumHelper.GetSelectItem<ChartDateType>())
                {
                    <option value="@key">@value</option>
                }
            </select>
        </div>
        <div class="layui-input-inline">
            <input type="text" id="email" name="email" class="layui-input" placeholder="请输入用户Email" />
        </div>
        <div class="layui-input-inline">
            <select id="userStatus" name="userStatus">
                <option value="">请选择状态</option>
                <option value="true">启用</option>
                <option value="false">禁用</option>
            </select>
        </div>
        <a class="layui-btn" id="search">查看图表</a>
    </form>
</blockquote>

<!-- 为 ECharts 准备一个具备大小（宽高）的 DOM -->
<div id="demo" style="width: 100%;height:600px;"></div>

@section Scripts{
    <script src="~/lib/jquery.min.js" asp-append-version="true"></script>
    <environment include="Development">
        <script type="text/javascript" src="~/echarts/echarts.js" asp-append-version="true"></script>
        <script src="~/echarts/shine.js" asp-append-version="true"></script>
        <script src="~/js/carrierTrack/statistics/index.js" asp-append-version="true"></script>
        <script src="~/lib/jquery.fileDownload.js" asp-append-version="true"></script>
    </environment>
    <environment exclude="Development">
        <script type="text/javascript" src="~/echarts/echarts.min.js" asp-append-version="true"></script>
        <script src="~/echarts/shine.min.js" asp-append-version="true"></script>
        <script src="~/js/carrierTrack/statistics/index.min.js" asp-append-version="true"></script>
        <script src="~/lib/jquery.fileDownload.min.js" asp-append-version="true"></script>
    </environment>
}

