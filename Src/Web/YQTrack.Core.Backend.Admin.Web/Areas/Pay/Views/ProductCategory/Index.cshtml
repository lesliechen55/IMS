
@{
    ViewBag.Title = "商品分类";
    Layout = "_Layout";
}

<blockquote class="layui-elem-quote">
    <form class="layui-form">
        <div class="layui-inline">
            <input type="hidden" id="page" name="page" value="1" />
            <input type="hidden" id="limit" name="limit" value="10" />
            <div class="layui-input-inline">
                <input type="text" id="name" name="name" class="layui-input" placeholder="请输入名称" />
            </div>
            <a class="layui-btn" id="search">搜索</a>
        </div>
    </form>
</blockquote>

<table id="table" class="layui-table" lay-filter="table"></table>

<script type="text/html" id="toolbar">
    <div class="layui-btn-container">
        <button class="layui-btn" lay-event="add">
            <i class="layui-icon">&#xe608;</i> 添加
        </button>
        <button class="layui-btn layui-btn-normal" lay-event="edit">
            <i class="layui-icon">&#xe642;</i> 编辑
        </button>
    </div>
</script>

@section Scripts{
    <environment include="Development">
        <script src="~/js/pay/productCategory/index.js" asp-append-version="true"></script>
    </environment>
    <environment exclude="Development">
        <script src="~/js/pay/productCategory/index.min.js" asp-append-version="true"></script>
    </environment>
}
