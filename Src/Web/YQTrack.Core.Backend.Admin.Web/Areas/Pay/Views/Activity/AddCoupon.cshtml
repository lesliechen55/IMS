@model IframeTransferData<ActivityPageDataResponse>
@{
    Layout = "_Layout";
}
@section head
{
    <link rel="stylesheet" href="~/module/formSelects-v4/formSelects-v4.css" asp-append-version="true" />
    <style type="text/css">
        .reqired {
            color: red;
            font-weight: bold;
            padding-right: 5px;
            vertical-align: middle;
        }

        .layui-form-label {
            width: 81px;
            padding-right: 12px;
        }
    </style>
}
<form id="activityCouponInfo" class="layui-form">
    <input type="hidden" name="activityId" id="hActivityId" value="@Model.Data.ActivityId" />
    <input type="hidden" id="hRules" value="@Model.Data.Rules" />

    <!--活动规则-->
    <div class="layui-form-item">
        <div class="layui-inline">
            <div class="layui-input-inline">
                <label class="layui-form-label"><span class="reqired">*</span>活动规则</label>
            </div>
        </div>
        <table id="activityRule" lay-filter="activityRule"></table>
    </div>

    <!-- 用户邮箱-->
    <div class="layui-form-item">
        <label class="layui-form-label"><span class="reqired">*</span>用户邮箱</label>
        <div class="layui-input-block">
            <input id="email" name="email" class="layui-input" type="text" autocomplete="off" lay-verify="required|email" placeholder="请输入用户注册邮箱">
        </div>
    </div>

    <!--Submit Button-->
    <div class="layui-form-item">
        <div class="layui-input-block">
            <button class="layui-btn" lay-submit lay-filter="form">确认</button>
            <button class="layui-btn layui-btn-danger" id="close">关闭</button>
        </div>
    </div>
</form>

@section Scripts{
    <environment include="Development">
        <script src="~/module/formSelects-v4/formSelects-v4.js" asp-append-version="true"></script>
        <script src="~/js/pay/activity/addCoupon.js" type="text/javascript" asp-append-version="true"></script>
    </environment>
    <environment exclude="Development">
        <script src="~/module/formSelects-v4/formSelects-v4.min.js" asp-append-version="true"></script>
        <script src="~/js/pay/activity/addCoupon.min.js" type="text/javascript" asp-append-version="true"></script>
    </environment>
}
