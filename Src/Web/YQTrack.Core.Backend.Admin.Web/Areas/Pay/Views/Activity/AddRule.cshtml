@{
    Layout = "_Layout";
}
<div class="layui-form">
    <div class="layui-form-item">
        <label class="layui-form-label">货币</label>
        <div class="layui-input-block">
            <input type="radio" name="currency" id="currency" value="0" title="未知" checked>
            <input type="radio" name="currency" id="currency"value="1" title="人民币">
            <input type="radio" name="currency" id="currency" value="2" title="美元">
        </div>
    </div>
    <div class="layui-form-item">
        <label class="layui-form-label">阈值</label>
        <div class="layui-input-block">
            <input type="text" name="threshold" id="threshold" required lay-verify="required|number" class="layui-input" placeholder="阈值">
        </div>
    </div>
    <div class="layui-form-item">
        <label class="layui-form-label">优惠</label>
        <div class="layui-input-block">
            <input type="text" name="discount" id="discount" required lay-verify="required|number" class="layui-input" placeholder="优惠">
        </div>
    </div>
</div>

@section Scripts{
    <environment include="Development">
        <script src="~/js/pay/activity/addrule.js" type="text/javascript" asp-append-version="true"></script>
    </environment>
    <environment exclude="Development">
        <script src="~/js/pay/activity/addrule.min.js" type="text/javascript" asp-append-version="true"></script>
    </environment>
}