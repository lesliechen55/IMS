@{
    Layout = "_Layout";
}

<blockquote class="layui-elem-quote">
    <form class="layui-form">
        <div class="layui-inline">
            <input type="hidden" id="page" name="page" value="1" />
            <input type="hidden" id="limit" name="limit" value="10" />
            <div class="layui-input-inline">
                <input type="number" id="year" name="year" step="1" min="2019" max="2050" class="layui-input" placeholder="请输入导入年份" onkeyup="this.value= this.value.match(/\d+/) ? this.value.match(/\d+/)[0] : ''" autocomplete="off" style="width: 180px;">
            </div>
            <div class="layui-input-inline">
                <input type="number" id="month" name="month" step="1" min="1" max="12" class="layui-input" placeholder="请输入导入月份" onkeyup="this.value= this.value.match(/\d+/) ? this.value.match(/\d+/)[0] : ''" autocomplete="off" style="width: 180px;" />
            </div>
            <div class="layui-inline">
                <a class="layui-btn" id="search">搜索</a>
            </div>
        </div>
    </form>
</blockquote>

<table id="table" class="layui-table" lay-filter="table"></table>

<script type="text/html" id="toolbar">
    <div class="layui-btn-container">
        <button class="layui-btn layui-btn-green" lay-event="import"><i class="layui-icon">&#xe681;</i> 导入信用卡对账单 </button>
    </div>
</script>

@section Scripts{
    <environment include="Development">
        <script src="~/js/pay/manualReconcile/index.js" asp-append-version="true"></script>
    </environment>
    <environment exclude="Development">
        <script src="~/js/pay/manualReconcile/index.min.js" asp-append-version="true"></script>
    </environment>
}