@using YQTrack.Core.Backend.Admin.Core
@using YQTrack.Core.Backend.Enums.Pay
@{
    Layout = "_Layout";
}

@section head{
    <environment include="Development">
        <link href="~/module/autoComplete/autocomplete.css" rel="stylesheet" asp-append-version="true" />
    </environment>
    <environment exclude="Development">
        <link href="~/module/autoComplete/autocomplete.min.css" rel="stylesheet" asp-append-version="true" />
    </environment>
}

<blockquote class="layui-elem-quote">
    <form class="layui-form">
        <div class="layui-input-inline">
            <select id="chartDateType" name="chartDateType">
                @foreach (var (key, value) in EnumHelper.GetSelectItem<ChartDateType>())
                {
                    <option value="@key">@value</option>
                }
            </select>
        </div>
        <div class="layui-input-inline">
            <input type="text" id="userNo" name="userNo" class="layui-input" placeholder="请输入用户编号" />
        </div>
        <div class="layui-input-inline">
            <input type="text" id="userName" name="userName" class="layui-input" placeholder="请输入用户名称可自动补全" />
        </div>
        <a class="layui-btn" id="search">查看图表</a>
    </form>
</blockquote>

<!-- 为 ECharts 准备一个具备大小（宽高）的 DOM -->
<div id="demo" style="width: 100%;height:600px;"></div>


@section Scripts{
    <environment include="Development">
        <script type="text/javascript" src="~/echarts/echarts.js" asp-append-version="true"></script>
        <script src="~/echarts/shine.js" asp-append-version="true"></script>
        <script src="~/js/trackApi/analyze/registerAnalyzeIndex.js" asp-append-version="true"></script>
    </environment>
    <environment exclude="Development">
        <script type="text/javascript" src="~/echarts/echarts.min.js" asp-append-version="true"></script>
        <script src="~/echarts/shine.min.js" asp-append-version="true"></script>
        <script src="~/js/trackApi/analyze/registerAnalyzeIndex.min.js" asp-append-version="true"></script>
    </environment>
}
